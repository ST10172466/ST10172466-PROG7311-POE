@using PROG7311_POE_Part_2.ViewModels;
@model ProductViewModel;
<head>
    <!-- Include Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
</head>

<form asp-action="AddProductDetails" method="post">

    <div class="d-flex flex-column justify-content-center align-items-center">

        <div class="card" style="border-color: #4CAF50; margin:50px;">
            <div class="card-header text-white bg-success text-center">
                <h2>Enter Product Details</h2>
            </div>
            <div class="card-body">

                <!-- Grid -->
                <div class="grid-base">

                    <!-- Product Name Label and TextBox -->
                    <div class="grid-item-left">
                        <label class="input-label">Name:</label>
                    </div>
                    <div class="grid-item-right">
                        <input asp-for="Product.Name" type="text" class="input-textbox" placeholder="Eg. 1" min="1" required />
                    </div>

                    <!-- Category Label and ComboBox -->
                    <div class="grid-item-left">
                        <label class="input-label">Category: </label>
                    </div>
                    <div class="grid-item-right">
                        <select asp-for="SelectedCategory" id="myCategoryComboBox" asp-items="new SelectList(Model.CategoryList)">
                            <option value="">Select Category</option>
                        </select>
                    </div>

                    <!-- Product Price Label and Textbox -->
                    <div class="grid-item-left">
                        <label class="input-label">Price:</label>
                    </div>
                    <div class="grid-item-right">
                        <input asp-for="Product.Price" type="number" step="0.01" required />
                    </div>

                    <!-- Production Date Label and DatePicker -->
                    <div class="grid-item-left">
                        <label class="input-label">Production Date:</label>
                    </div>
                    <div class="grid-item-right">
                        <input asp-for="Product.ProductionDate" type="date" required />
                    </div>

                    <!-- Product Description Label and Textbox -->
                    <div class="grid-item-left">
                        <label class="input-label">Description:</label>
                    </div>
                    <div class="grid-item-right">
                        <input asp-for="Product.Description" class="input-textbox" placeholder="Eg. This is a product" required />
                    </div>

                    <!-- Product Stock Label and TextBox -->
                    <div class="grid-item-left">
                        <label class="input-label">Stock Level:</label>
                    </div>
                    <div class="grid-item-right">
                        <input asp-for="Product.Stock" type="number" class="input-textbox" placeholder="Eg. 10" min="0" />
                    </div>
                </div>

                <!-- Button to Add Product -->
                <div class="grid-item-center">
                    <button class="btn btn-success" style="width: 200px;" type="submit">Add Product</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Success Handling -->
    <div class="toast" id="successToast" role="alert" aria-live="assertive" aria-atomic="true" data-delay="3000" style="position: fixed; bottom: 40%; left: 50%; transform: translate(-50%, 0);">
        <div class="toast-header">
            <i class="fas fa-check-circle mr-2"></i>
            <strong class="mr-auto" style="margin-left:5px;">Success</strong>
        </div>
        <div class="toast-body" id="successToastBody">
        </div>
    </div>

    <!-- Error Handling -->
    <div class="toast" id="errorToast" role="alert" aria-live="assertive" aria-atomic="true" data-delay="3000" style="position: fixed; bottom: 40%; left: 50%; transform: translate(-50%, 0);">
        <div class="toast-header">
            <i class="fas fa-exclamation-triangle mr-2"></i>
            <strong class="mr-auto" style="margin-left:5px;">Error</strong>
        </div>
        <div class="toast-body" id="errorToastBody">
        </div>
    </div>
</form>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

<script>
    $(document).ready(function () {
        var successMessage = '@(ViewBag.SuccessMessage ?? "")';
        if (successMessage) {
            $('#successToastBody').text(successMessage);
            $('#successToast').toast('show');
        }
    });
</script>

<script>
    $(document).ready(function () {
        var errorMessage = '@(ViewBag.ErrorMessage ?? "")';
        if (errorMessage) {
            $('#errorToastBody').text(errorMessage);
            $('#errorToast').toast('show');
        }
    });
</script>