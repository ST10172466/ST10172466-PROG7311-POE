@model List<FundingModel>

<div class="container">
    <h1 class="my-4">Funding Opportunities</h1>

    <div class="toast" style="position: absolute; top: 0; right: 0;" data-delay="2000" id="toast">
        <div class="toast-body">
            Application submitted.
        </div>
    </div>

    <div class="row">
        @foreach (var opportunity in Model)
        {
            <div class="col-md-4">
                <div class="card mb-4">
                    <div class="card-body">
                        <h5 class="card-title">@opportunity.Name</h5>
                        <p class="card-text">@opportunity.Description</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <button type="button" class="btn btn-sm btn-outline-secondary apply-btn">Apply</button>
                            </div>
                            <small class="text-muted">@opportunity.Amount.ToString("C")</small>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.apply-btn').click(function () {
                $('.toast').toast('show');
            });
        });
    </script>
}
